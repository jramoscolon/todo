<div class="form-box"><!-- Creates a container with some padding -->
  <div class="page-header">
    <h2>Log in</h2>
  </div><!-- page-header -->

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, :class => "form-control", :id => "emailField", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, :class => "form-control", :id => "pswField", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    
  <% end %>

  <%= render "devise/shared/links" %>
</div><!-- form box -->
